@model uvrp.Resources

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Create</h2>
<input type="hidden" id="addClass" value="1" />
@using (Html.BeginForm("Create", "Resources", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="row align-items-center">
    <div class="col-12">
        <div class="alert alert-danger" role="alert">

        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label text-capitalize" })

            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control outline", required = "required" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label text-capitalize" })

            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control outline" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.IconImage, htmlAttributes: new { @class = "control-label text-capitalize" })
            @Html.TextBox("IconImage", "", new { type = "file", @class = "form-control outline outline lg", required = "required" })
            @Html.ValidationMessageFor(model => model.IconImage, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 text-right">
        @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-outline-primary" })
        <input type="submit" onclick="validate()" value="Create" class="btn btn-primary " />
    </div>
</div>
}
<script>
    $('.alert').hide();
    function validate() {

        $('.alert').empty();
        $('.alert').show();

        if ($('#Title').val() == "") {
            $('.alert').append("Title missing.");
            return;
        }

        if ($('#IconImage').prop('files').length == 0) {
            $('.alert').append("Image missing.");
            return;
        }

    }
</script>
