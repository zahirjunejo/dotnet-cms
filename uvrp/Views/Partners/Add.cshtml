@model uvrp.Models.PartnersVM

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<input type="hidden" id="addClass" value="1" />
<div class="mb-3">
    <h2>Add Partner</h2>
</div>

@using (Html.BeginForm("Add", "Partners", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="row align-items-center">
    <div class="col-12">
        <div class="alert alert-danger" role="alert">

        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label text-capitalize" })

            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control outline", required = "required" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label text-capitalize" })
            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control outline" } })
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.CompanyHomePage, htmlAttributes: new { @class = "control-label text-capitalize" })
                @Html.EditorFor(model => model.CompanyHomePage, new { htmlAttributes = new { @class = "form-control outline" } })
                @Html.ValidationMessageFor(model => model.CompanyHomePage, "", new { @class = "text-danger" })
            </div>
        </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label text-capitalize" })
            @Html.TextBox("Logo", "", new { type = "file", @class = "form-control outline outline lg" })
            @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 text-right">
        @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-outline-primary" })
        <input type="submit" onclick="validate()" value="Create" class="btn btn-primary " />
    </div>
</div>
}
<script>
    $('.alert').hide();
    function validate() {

        $('.alert').empty();
        $('.alert').show();

        if ($('#name').val() == "") {
            $('.alert').append("Name missing.");
            return;
        }

    }
</script>