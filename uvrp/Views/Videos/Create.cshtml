@model uvrp.Video

@{
    ViewBag.Title = "Create"; Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<input type="hidden" id="addClass" value="1" />
<div class="mb-4">
    <h2>Create Video</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row align-items-center">
    <div class="col-12">
        <div class="alert alert-danger" role="alert">

        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label text-capitalize" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control outline", required = "required" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label text-capitalize">Video Link</label>
            @Html.EditorFor(model => model.VideoLink, new { htmlAttributes = new { type = "Url", @class = "form-control outline", required = "required" } })
            @Html.ValidationMessageFor(model => model.VideoLink, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
    <div class="row">
        <div class="col-12 text-right">
            @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-outline-primary" })
            <input type="submit" onclick="validate()" value="Create" class="btn btn-primary " />
        </div>
    </div>
}
<script>
        $('.alert').hide();
        function validate() {

            $('.alert').empty();
            $('.alert').show();

            if ($('#Title').val() == "") {
                $('.alert').append("Title missing.");
                return;
            }

            if ($('#VideoLink').val() == "") {
                $('.alert').append("Link missing.");
                return;
            }

            $('.alert').hide();
        }
</script>